def largest(arr, n):
    # maximal element
    max = arr[0]
    for i in range(1, n+1):
        if arr[i] > max:
            max = arr[i]
    return max




arr = [10, 24, 45, 90, 98]   #array in which we have to find largest element
n = len(arr)                 #number of elements in array
Ans = largest(arr, n)
print("Largest in the given array is", Ans)
