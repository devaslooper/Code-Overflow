#include<iostream>
#include<set>
#include<stack>
#include<cmath>
#include<vector>
#include<map>
#include<unordered_map>
#define ll long long 
#define pi acos(-1)
using namespace std;
long long gcd(long long int a, long long int b)
{
  if (b == 0)
    return a;
  return gcd(b, a % b);
}
long long lcm(int a, int b)
{
    return (a / gcd(a, b)) * b;
}
void solve()
{
  ll l,r;
   cin >> l >> r;
		ll d = r - l;
		if (d >= l) {
			cout << "-1" << endl;
			return ;
		}
		cout << r << endl;  
}
int main()
{
  int t;
  cin>>t;
  // t=1;
  while(t--)
  {
    solve();
  }
}
