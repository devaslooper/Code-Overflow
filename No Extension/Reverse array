//Reversing an array
#include <stdio.h>
#define MAX 100
int main()
{
    int array[MAX], rev[MAX], c, n;
    printf("Enter the size of array:  ");
    scanf("%d",&n);
    printf("\nEnter %d numbers: \n",n);
    for(c=0; c<n; c++)
    {
        scanf("%d",&array[c]);
    }

    for(c=n-1; c>=0; c--)
    {
        rev[c]=array[c];
    }
     printf("\nSame array in reverse order: \n");
     for(c=n-1; c>=0; c--)
     {
         printf("%d\n",rev[c]);
     }
     return 0;

}
